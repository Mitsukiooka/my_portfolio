!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "ie=edge", "http-equiv" => "x-ua-compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    / Use the title from a page's frontmatter if it has one
    %title= current_page.data.title || "Mitsuki Ooka's Portfolio"
    = stylesheet_link_tag "site"
    %script{:src => "/javascripts/static/js/jquery-3.2.1.min.js"}
    %script{:src => "/javascripts/static/js/jquery-migrate-3.0.0.min.js"}
    %script{:src => "/javascripts/modernizr.custom.min.js"}
    %script{:src => "/javascripts/jquery-1.10.2.min.js"}
    %script{:src => "/javascripts/jquery-ui-1.10.3.custom.min.js"}
    %script{:src => "/javascripts/jquery.mousewheel.js"}
    %script{:src => "/javascripts/imagesloaded.pkgd.min.js"}
    = javascript_include_tag 'layout'
  %body
    = yield
